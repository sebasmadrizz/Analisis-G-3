@page
@model Web.Pages.Cuenta.AccesoDenegadoModel
@{
}
<head>
    <link href="~/css/AccesoDenegado.css" rel="stylesheet" />
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="p-5 text-center">
               
                <div class="icon-shield">
                    <i class="fas fa-shield-alt"></i>
                </div>

               
                <h1 class="error-code">403</h1>
                <h2 class="h3">¡Acceso Denegado!</h2>

               
                <div class="mb-4">
                    <img src="~/img/accesidenegado.gif"
                         alt="Khabib diciendo no"
                         class="khabib-gif">
                </div>
                <div class="error-message mb-4">
                    <p class="mb-3">
                        <strong>Lo sentimos, pero no tienes permisos para acceder a esta página.</strong>
                    </p>
                    <p class="mb-0">
                        Como dice Khabib: "No, no, no..." 🥊<br>
                    </p>
                </div>

                
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <button class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>
                        Volver Atrás
                    </button>
                    <button class="btn btn-home btn-lg text-white">
                        <i class="fas fa-home me-2"></i>
                        Ir al Inicio
                    </button>
                </div>

                
                <div class="mt-4 pt-4 border-top">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Si necesitas ayuda, contacta al soporte técnico
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>