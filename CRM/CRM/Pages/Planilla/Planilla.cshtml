@page
@model Web.Pages.Planilla.PlanillaModel
@{
}
<head>
    <link href="~/css/modales.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/tablas.css" rel="stylesheet" />
</head>
<style>
    .table-responsive {
        max-width: 1400px; 
        margin: 0 auto;
    }

    .ms-6 {
            margin-left: 350px !important;
    }

    .ms-7 {
            margin-left: 10rem !important; 
    }

</style>
<body>
    

    <h1 class="page-title">Gestión de Planilla</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-primary ms-6" data-bs-toggle="modal"
                data-bs-target="#agregarEmpleadoModal">
            <i class="bi bi-plus-lg"></i> Agregar Empleado
        </button>
    </div>

    <div class="table-responsive">
        <table id="planillaTable" class="table table-striped table-bordered rounded-table text-center">
            <thead class="table-dark">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre completo</th>
                    <th>Deducciones legales</th>
                    <th>Horas extras</th>
                    <th>Vacaciones</th>
                    <th>Comisiones</th>
                    <th>Ausencias</th>
                    <th>Incapacidades</th>
                    <th>Salario neto</th>
                    <th>Salario bruto</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>1-1234-5678</td>
                    <td>Juan Pérez</td>
                    <td>₡25,000</td>
                    <td>10 h</td>
                    <td>5 días</td>
                    <td>₡15,000</td>
                    <td>2 días</td>
                    <td>1 día</td>
                    <td>₡550,000</td>
                    <td>₡600,000</td>
                    <td>
                        <button class="btn btn-info btn-sm ver-detalles"
                                data-cedula="1-1234-5678"
                                data-nombre="Juan Pérez"
                                data-correo="juan.perez@email.com"
                                data-puesto="Contador"
                                data-padecimientos="Ninguno"
                                data-cuenta="123456789012"
                                data-contrato="Indefinido"
                                data-jornada="Tiempo completo"
                                data-ingreso="01/01/2022">
                            <i class="bi bi-eye-fill"></i> Ver
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

    

    
    <div class="modal fade" id="verEmpleadoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del Empleado</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body row g-3">
                    <div class="col-md-6"><p><strong>Cédula:</strong> <span id="detCedula"></span></p></div>
                    <div class="col-md-6"><p><strong>Nombre:</strong> <span id="detNombre"></span></p></div>
                    <div class="col-md-6"><p><strong>Correo:</strong> <span id="detCorreo"></span></p></div>
                    <div class="col-md-6"><p><strong>Puesto:</strong> <span id="detPuesto"></span></p></div>
                    <div class="col-md-6"><p><strong>Padecimientos:</strong> <span id="detPadecimientos"></span></p></div>
                    <div class="col-md-6"><p><strong>Cuenta bancaria:</strong> <span id="detCuenta"></span></p></div>
                    <div class="col-md-6"><p><strong>Tipo de contrato:</strong> <span id="detContrato"></span></p></div>
                    <div class="col-md-6"><p><strong>Jornada:</strong> <span id="detJornada"></span></p></div>
                    <div class="col-md-6"><p><strong>Fecha de ingreso:</strong> <span id="detIngreso"></span></p></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="agregarEmpleadoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form id="formAgregarEmpleado">
                    <div class="modal-header  text-white">
                        <h5 class="modal-title">Agregar Nuevo Empleado</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body row g-3 p-4">
                        
                        <div class="col-md-12"><h6 class="text-primary">Datos Personales</h6></div>

                        <div class="col-md-6">
                            <label class="form-label">Cédula</label>
                            <input type="text" class="form-control input-squarespace" name="cedula" placeholder="cedula">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nombre Completo</label>
                            <input type="text" class="form-control input-squarespace" name="nombre" placeholder="nombre">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control input-squarespace" name="correo" placeholder="correo">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Puesto</label>
                            <input type="text" class="form-control input-squarespace" name="puesto" placeholder="puesto">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Padecimientos</label>
                            <input type="text" class="form-control input-squarespace" name="padecimientos" placeholder="padecimientos">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Cuenta Bancaria</label>
                            <input type="text" class="form-control input-squarespace" name="cuenta" placeholder="cuenta bancaria">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tipo de Contrato</label>
                            <select class="form-select" name="contrato" required>
                                <option value="">Seleccione</option>
                                <option value="Indefinido">Indefinido</option>
                                <option value="Plazo fijo">Plazo fijo</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Jornada</label>
                            <select class="form-select" name="jornada" required>
                                <option value="">Seleccione</option>
                                <option value="Tiempo completo">Tiempo completo</option>
                                <option value="Medio tiempo">Medio tiempo</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Fecha de Ingreso</label>
                            <input type="date" class="form-control input-squarespace" name="fecha_ingreso">
                        </div>

                        
                        <div class="col-md-12 pt-3"><h6 class="text-primary">Datos de Planilla</h6></div>

                        <div class="col-md-6">
                            <label class="form-label">Deducciones Legales</label>
                            <input type="number" class="form-control input-squarespace" name="deducciones" min="0" step="0.01" placeholder="Deducciones">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Horas Extras</label>
                            <input type="number" class="form-control input-squarespace" name="horas_extras" min="0" placeholder="Horas Extras">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Comisiones</label>
                            <input type="number" class="form-control input-squarespace" name="comisiones" min="0" step="0.01" placeholder="Comisiones">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ausencias</label>
                            <input type="number" class="form-control input-squarespace" name="ausencias" min="0" placeholder="Ausencias">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Incapacidades</label>
                            <input type="number" class="form-control input-squarespace" name="incapacidades" min="0" placeholder="incapacidades">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Salario Neto</label>
                            <input type="number" class="form-control input-squarespace" name="salario_neto" min="0" step="0.01" placeholder="salario neto">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Salario Bruto</label>
                            <input type="number" class="form-control input-squarespace" name="salario_bruto" min="0" step="0.01" placeholder="salario bruto">
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    
</body>
@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#planillaTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            },
            );

            $('.ver-detalles').on('click', function () {
                $('#detCedula').text($(this).data('cedula'));
                $('#detNombre').text($(this).data('nombre'));
                $('#detCorreo').text($(this).data('correo'));
                $('#detPuesto').text($(this).data('puesto'));
                $('#detPadecimientos').text($(this).data('padecimientos'));
                $('#detCuenta').text($(this).data('cuenta'));
                $('#detContrato').text($(this).data('contrato'));
                $('#detJornada').text($(this).data('jornada'));
                $('#detIngreso').text($(this).data('ingreso'));

                $('#verEmpleadoModal').modal('show');
            });
        });
    </script>
}
