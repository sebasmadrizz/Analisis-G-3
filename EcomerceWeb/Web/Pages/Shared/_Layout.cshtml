
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg category-navbar shadow-sm sticky-top">
            <div class="container-fluid">

                <div class="collapse navbar-collapse" id="categoryNav">
                    <a class="navbar-brand" asp-page="../Productos/Index">Ecomerce</a>
                    @await Component.InvokeAsync("MenuCategorias", new { viewName = "Nav" })
                    <div class="position-relative">
                        <form class="d-flex me-3 search-form"  method="get" action="../Productos/BusquedasIndex">
                            <input class="form-control search-input" type="search" placeholder="Buscar productos..." 
                            aria-label="Buscar productos" id="buscador" name="searchTerm" />
                            <button class="btn btn-outline-light search-btn" type="submit"><i class="fas fa-search"></i></button>
                        </form>

                        <div id="resultadosBusqueda" class="position-absolute bg-white rounded shadow d-none"
                             style="top: 100%; left: 0; width: 100%; z-index: 10;">
                        </div>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="../Carrito/Carrito" class="btn btn-primary rounded-circle"><i class="fas fa-shopping-cart text-white" style="height:26px; width:26px;"></i></a>
                        <a asp-page="../Cuenta/verCuenta">
                            <img src="https://imagenes.heraldo.es/files/image_1920_1080/uploads/imagenes/2025/02/18/ibai-llanos-sin-barba-en-su-ultima-publicacion-en-redes-sociales.png" class="perfil" alt="" style=" width: 56px;
        height: 56px;
        border-radius: 999px;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,.6);">
                        </a>

                    }
                    else
                    {
                        <a asp-page="../Cuenta/Login" class="btn-creative">Login</a>
                        
                    }

                    
                   
                    @if (User.IsInRole("1"))
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="Administracion"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear-fill text-white"></i> Administracion
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="Administracion">
                                <li><a class="dropdown-item" asp-page="../Categorias/Categorias">Categorias</a></li>
                                <li><a class="dropdown-item" asp-page="../Productos/Inventario">Inventario</a></li>
                                <li><a class="dropdown-item" asp-page="/Proveedor/MostrarProveedores">Proveedores</a></li>
                                <li><a class="dropdown-item" asp-page="../Cuenta/CrearUsuarioEmpleado">Agregar empleado</a></li>
                            </ul>
                        </div>
                    }

                </div>
            </div>
        </nav>
    </header>
    @await Component.InvokeAsync("MenuCategorias", new { viewName = "Aside" })
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
