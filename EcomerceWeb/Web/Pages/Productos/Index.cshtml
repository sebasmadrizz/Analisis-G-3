@functions {
    // Función para obtener productos activos de una categoría
    public List<Producto> ObtenerProductosPorCategoria(string categoria, IList<Producto> todos)
    {
        return todos
            .Where(p => p.Categoria == categoria && p.Stock > 0 && p.Estado?.Trim().ToLower() == "activo")
            .ToList();
    }
}

<div class="container-fluid py-4">
    @if (Model.productos != null && Model.productos.Any(p => p.Stock > 0 && p.Estado?.Trim().ToLower() == "activo"))
    {
        var categorias = Model.productos
            .Where(p => p.Stock > 0 && p.Estado?.Trim().ToLower() == "activo")
            .Select(p => p.Categoria ?? "General")
            .Distinct()
            .ToList();

        foreach (var categoria in categorias)
        {
            var productosPorCategoria = ObtenerProductosPorCategoria(categoria, Model.productos);

            if (productosPorCategoria.Count == 0)
            {
                continue; // Saltar categorías sin productos
            }

            <h3 class="mb-3">@categoria</h3>

            <div id="carousel-@categoria.Replace(" ", "")" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < productosPorCategoria.Count; i += 5)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
                                @foreach (var producto in productosPorCategoria.Skip(i).Take(5))
                                {
                                    <div class="col">
                                        <div class="card shadow-sm position-relative product-card">
                                            <div class="overflow-hidden position-relative">
                                                <img src="@producto.ImagenUrl"
                                                     alt="@producto.Nombre"
                                                     class="card-img-top img-fluid product-img"
                                                     onclick="location.href='@Url.Page("./DetalleProducto", new { IdProducto = producto.IdProducto })'"
                                                     style="cursor:pointer; height:180px; object-fit:cover;" />
                                            </div>
                                            <div class="card-body text-center rounded-bottom-3" style="background-color:#f2f2f2">
                                                <h5 class="card-title text-truncate">@producto.Nombre</h5>
                                                <p class="card-text text-muted small mb-2">@producto.Categoria</p>
                                                <p class="card-text fw-bold text-truncate fs-5">$@producto.Precio</p>

                                                @if (producto.Stock > 10)
                                                {
                                                    <span class="badge bg-success">Disponible</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">¡Últimas unidades!</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@categoria.Replace(" ", "")" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-@categoria.Replace(" ", "")" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning w-100 text-center" role="alert">
                Productos no disponibles
            </div>
        </div>
    }
