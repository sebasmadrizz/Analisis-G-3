<script>
    window.crearProductoExito = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["CrearProductoExito"] ?? null));
</script>
<script > document.addEventListener("DOMContentLoaded", function () {
    console.log(window.crearProductoExito);
    if (window.crearProductoExito === true) {
        Swal.fire({
                    title: "<strong>Producto agregado</strong>",
                    icon: "success",
                    html: `
    <p>¡El producto fue agregado correctamente!</p>
    <img src="/img/aprobado.jpg" alt="Producto agregado" style="width: 150px; margin-top: 10px;" />
  `,
                    showCloseButton: true,
                    showCancelButton: false,
                    focusConfirm: false,
                    confirmButtonText: `
    <i class="fa fa-thumbs-up"></i> ¡Volver!
  `,
                    
                }).then((result) => {
                    if (result.isConfirmed) {
                        location.reload();
                    }
                });
    } else if (window.crearProductoExito === false) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'No se pudo crear el producto',
            showConfirmButton: true
        });
    }
});</script>
<script>
    const exportCategoria = document.getElementById('exportCategoria');
    const exportTodo = document.getElementById('exportTodo');
    const categoriaSelectContainer = document.getElementById('categoriaSelectContainer');

    exportCategoria.addEventListener('change', () => {
      categoriaSelectContainer.style.display = 'block';
    });

    exportTodo.addEventListener('change', () => {
      categoriaSelectContainer.style.display = 'none';
    });
  </script>
}
