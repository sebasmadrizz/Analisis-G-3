@page
@model Web.Pages.Clientes.ClientesModel
@{
}
<head>
    <link href="~/css/modales.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/tablas.css" rel="stylesheet" />
    <link href="~/css/vercuenta.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f7f9;
            padding: 0;
        }

        .page-container {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        .account-sidebar {
            width: 250px;
            min-width: 250px;
            flex-shrink: 0;
        }

        .main-content-container {
            flex-grow: 1;
            overflow-y: auto;
            padding: 2rem;
        }

        .account-sidebar .nav-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #495057;
            font-weight: 600;
            border-radius: 0.5rem;
            margin-bottom: 0.5rem;
            transition: background-color 0.2s ease;
        }

            .account-sidebar .nav-link:hover {
                background-color: #e9ecef;
            }

            .account-sidebar .nav-link.active {
                background-color: #0d6efd;
                color: white;
            }

            .account-sidebar .nav-link i {
                margin-right: 0.75rem;
                font-size: 1.25rem;
            }

        .page-title {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #212529;
        }

        .main-content-container .table-responsive {
            max-width: 1400px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>

<body>


    <div class="modal fade" id="modalEditarCliente" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="modalEditarClienteContent">
            </div>
        </div>
    </div>


    <div class="page-container">

        <aside class="account-sidebar">
            <div class="card-soft">
                <nav class="nav flex-column">
                    <a class="nav-link active" data-bs-toggle="tab" href="#table-clientes">
                        <i class="bi bi-people-fill"></i>
                        Clientes
                    </a>
                    <a class="nav-link" data-bs-toggle="tab" href="#table-cuentas">
                        <i class="bi bi-cash-stack"></i>
                        Cuentas por cobrar
                    </a>
                </nav>
            </div>
        </aside>

        <div class="main-content-container">
            <div class="container-fluid">
                <div class="tab-content">
                    <div class="table-responsive tab-pane fade show active" id="table-clientes">
                        <h1 class="page-title">Gestión de Clientes</h1>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarClienteModal">
                                <i class="bi bi-plus-lg"></i> Agregar cliente
                            </button>

                        </div>
                        <table id="clientesTable" class="table table-striped table-bordered rounded-table text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tipo</th>
                                    <th>Nombre / Razón Social</th>
                                    <th>Identificación</th>
                                    <th>Teléfono</th>
                                    <th>Correo</th>
                                    <th>Dirección</th>
                                    <th>Fecha Registro</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cliente in Model.clientes)
                                {
                                    <tr data-id="@cliente.ClienteId">
                                        <td>@cliente.TipoCliente</td>
                                        <td>@cliente.Nombre</td>
                                        <td>@cliente.Identificacion</td>
                                        <td>@cliente.Telefono</td>
                                        <td>@cliente.Correo</td>
                                        <td>@cliente.Direccion</td>
                                        <td>@cliente.FechaCreacion.ToString("yyyy-MM-dd")</td>
                                        <td>

                                            <form method="post" asp-page-handler="EliminarCliente"
                                                  asp-route-idCliente="@cliente.ClienteId"
                                                  class="d-inline form-eliminar-cliente">
                                                @if (cliente.EstadoId == 1)
                                                {
                                                    <button type="submit" class="btn btn-success btn-sm toggle-estado btn-rounded" title="Desactivar">
                                                        <i class="bi bi-toggle-off"></i>
                                                    </button>
                                                }
                                                else if (cliente.EstadoId == 2)
                                                {
                                                    <button type="submit" class="btn btn-warning btn-sm toggle-estado btn-rounded" title="Activar">
                                                        <i class="bi bi-toggle-on"></i>
                                                    </button>
                                                }
                                            </form>
                                          
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <button class="btn btn-primary rounded-pill btn-editar"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalEditarCliente"
                                                        data-id="@cliente.ClienteId">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                    <div class="table-responsive tab-pane fade" id="table-cuentas">
                        <h1 class="page-title">Gestión de cuentas por cobrar</h1>
                        <table id="cuentasTable" class="table table-striped table-bordered rounded-table text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>Cuenta ID</th>
                                    <th>Nombre Cliente</th>
                                    <th>Fecha Registro</th>
                                    <th>Monto Total</th>
                                    <th>Saldo Actual</th>
                                    <th>Fecha Vencimiento</th>
                                    <th>Descripción</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Juan Pérez</td>
                                    <td>2025-08-01</td>
                                    <td>₡150,000</td>
                                    <td>₡50,000</td>
                                    <td>2025-09-15</td>
                                    <td>Factura 00123 - Venta de productos</td>
                                    <td>Pendiente</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <button class="btn btn-primary btn-rounded" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Comercial XYZ S.A.</td>
                                    <td>2025-07-10</td>
                                    <td>₡250,000</td>
                                    <td>₡100,000</td>
                                    <td>2025-09-20</td>
                                    <td>Factura 00456 - Servicios prestados</td>
                                    <td>Pendiente</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <button class="btn btn-primary btn-rounded" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>María Rodríguez</td>
                                    <td>2025-07-05</td>
                                    <td>₡90,000</td>
                                    <td>₡0</td>
                                    <td>2025-08-05</td>
                                    <td>Factura 00789 - Cancelada</td>
                                    <td>Cancelada</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <button class="btn btn-primary btn-rounded" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="agregarClienteModal" tabindex="-1" aria-labelledby="agregarClienteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <form method="post" asp-page-handler="AgregarCliente" asp-antiforgery="true" id="formAgregarCliente">

                    <div class="modal-header">
                        <h5 class="modal-title" id="agregarClienteModalLabel">Agregar Cliente</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>

                    <div class="modal-body row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="col-md-6">
                            <label class="form-label" asp-for="cliente.TipoCliente">Tipo</label>
                            <select class="form-select" asp-for="cliente.TipoCliente" required>
                                <option value="" disabled selected>Seleccione un tipo</option>
                                <option value="Persona Física">Persona Física</option>
                                <option value="Persona Jurídica">Persona Jurídica</option>
                            </select>
                            <span class="text-danger" asp-validation-for="cliente.TipoCliente"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label" asp-for="cliente.Nombre">Nombre / Razón Social</label>
                            <input class="form-control input-squarespace" asp-for="cliente.Nombre" required />
                            <span class="text-danger" asp-validation-for="cliente.Nombre"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label" asp-for="cliente.Identificacion">Identificación</label>
                            <input class="form-control input-squarespace" asp-for="cliente.Identificacion" required />
                            <span class="text-danger" asp-validation-for="cliente.Identificacion"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label" asp-for="cliente.Telefono">Teléfono</label>
                            <input class="form-control input-squarespace" asp-for="cliente.Telefono" required />
                            <span class="text-danger" asp-validation-for="cliente.Telefono"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label" asp-for="cliente.Correo">Correo</label>
                            <input type="email" class="form-control input-squarespace" asp-for="cliente.Correo" required />
                            <span class="text-danger" asp-validation-for="cliente.Correo"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label" asp-for="cliente.Direccion">Dirección</label>
                            <input class="form-control input-squarespace" asp-for="cliente.Direccion" required />
                            <span class="text-danger" asp-validation-for="cliente.Direccion"></span>
                        </div>
                        <input type="hidden" asp-for="cliente.ClienteId" />
                        <input type="hidden" asp-for="cliente.FechaCreacion" />
                        <input type="hidden" asp-for="cliente.FechaActualizacion" />
                        <input type="hidden" asp-for="cliente.EstadoId" value="1" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            $(document).ready(function () {
              $('#clientesTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' }
              });
              $('#cuentasTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' }
              });
              $(document).on('click', '.btn-editar', function () {
                var clienteId = $(this).data('id');
                $.get(
                  '@Url.Page("/Clientes/Clientes", null, new { handler = "EditarFormulario" })',
                  { idCliente: clienteId }
                )
                .done(function (data) {
                  $('#modalEditarClienteContent').html(data);
                  var modal = new bootstrap.Modal(document.getElementById('modalEditarCliente'));
                  modal.show();
                })
               
              });

              $(document).on('submit', '#formCliente', function (e) {
                e.preventDefault();

                var $form = $(this);
                var token = $form.find('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                  type: 'POST',
                  url: '@Url.Page("/Clientes/Clientes", null, new { handler = "EditarCliente" })',
                  data: $form.serialize(),
                  headers: { 'RequestVerificationToken': token }
                })
                .done(function (response) {
                  
                  if (response && response.ok === true) {
                    var modalEl = document.getElementById('modalEditarCliente');
                    var modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                    modal.hide();
                    location.reload();
                  } else {
                   
                    $('#modalEditarClienteContent').html(response);
                  }
                })
             
              });
            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                document.querySelectorAll(".form-eliminar-cliente").forEach(form => {
                    form.addEventListener("submit", function (e) {
                        e.preventDefault();

                        Swal.fire({
                            title: '¿Desea cammbiar el estado? ?',
                            text: "Se cambiará el estado del cliente.",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Sí, confirmar',
                            cancelButtonText: 'Cancelar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                            }
                        });
                    });
                });
            });
        </script>
    }

</body>







