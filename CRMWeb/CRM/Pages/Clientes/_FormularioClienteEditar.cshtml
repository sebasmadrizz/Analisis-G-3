@model Abstracciones.Modelos.Clientes.Cliente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<form id="formEditarCliente" method="post" asp-page-handler="EditarCliente">
    @Html.AntiForgeryToken()

    <div class="modal-header text-white">
        <h5 class="modal-title">Agregar Nuevo Cliente</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body row g-3 p-4">
        <div class="col-12"><h6 class="text-primary">Datos Personales</h6></div>

        <div class="col-md-6">
            <label class="form-label" asp-for="TipoCliente">Tipo</label>
            <select class="form-select" asp-for="TipoCliente" required>
                <option value="" disabled selected>Seleccione un tipo</option>
                <option value="Persona Física">Persona Física</option>
                <option value="Persona Jurídica">Persona Jurídica</option>
            </select>
            <span class="text-danger" asp-validation-for="TipoCliente"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="Nombre">Nombre / Razón Social</label>
            <input class="form-control input-squarespace" asp-for="Nombre" required />
            <span class="text-danger" asp-validation-for="Nombre"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="Identificacion">Identificación</label>
            <input class="form-control input-squarespace" asp-for="Identificacion" required />
            <span class="text-danger" asp-validation-for="Identificacion"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="Telefono">Teléfono</label>
            <input class="form-control input-squarespace" asp-for="Telefono" required />
            <span class="text-danger" asp-validation-for="Telefono"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="Correo">Correo</label>
            <input type="email" class="form-control input-squarespace" asp-for="Correo" required />
            <span class="text-danger" asp-validation-for="Correo"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="Direccion">Dirección</label>
            <input class="form-control input-squarespace" asp-for="Direccion" required />
            <span class="text-danger" asp-validation-for="Direccion"></span>
        </div>
    </div>

    <div class="modal-footer bg-light">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Guardar
        </button>
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
    </div>
</form>
